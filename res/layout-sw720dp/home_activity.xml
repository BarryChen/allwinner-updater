<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fsms="http://schemas.android.com/apk/res/com.softwinner.update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/btn_back_width"
            android:layout_height="@dimen/btn_back_height"
            android:layout_marginLeft="@dimen/update_imagetitle_margin_left"
            android:layout_marginTop="@dimen/update_imagetitle_margin_top"
            android:background="#00000000"
            android:src="@drawable/ic_nav_prev_nor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

        <com.softwinner.update.Widget.TextImageButton
            android:id="@+id/imageButton_online"
            android:layout_width="0dp"
            android:layout_height="@dimen/update_home_imagebtn_height"
            android:layout_weight="1.2"
            android:background="@drawable/update_main_btn_selector"
            fsms:src="@drawable/ic_ota_update_online_sm"
            fsms:text="@string/update_online"
            fsms:textColor="#FFFFFFFF"
            fsms:textSize="@dimen/setting_textsize_xmedium" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6" />

        <com.softwinner.update.Widget.TextImageButton
            android:id="@+id/imageButton_local"
            android:layout_width="0dp"
            android:layout_height="@dimen/update_home_imagebtn_height"
            android:layout_weight="1.2"
            android:background="@drawable/update_main_btn_selector"
            fsms:src="@drawable/ic_ota_update_local_sm"
            fsms:text="@string/update_local"
            fsms:textColor="#FFFFFFFF"
            fsms:textSize="@dimen/setting_textsize_xmedium" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.1" />
    </LinearLayout>

</LinearLayout>